# ===== REACT OPTIMIZATIONS =====
REACT_APP_ENV=production
GENERATE_SOURCEMAP=false
INLINE_RUNTIME_CHUNK=false

# ===== API CONFIGURATION =====
REACT_APP_API_BASE_URL=https://api.yourdomain.com
REACT_APP_API_TIMEOUT=15000
REACT_APP_API_VERSION=v1

# ===== SECURITY HEADERS =====
REACT_APP_CSP="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self'; connect-src 'self' https://api.yourdomain.com"

# ===== DATABASE INFO =====
REACT_APP_DB_HOST_PROD=aurora-prod-cluster.cluster-abc123.us-east-1.rds.amazonaws.com
REACT_APP_DB_NAME_PROD=ecommerce_prod

# ===== MONITORING =====
REACT_APP_SENTRY_DSN=https://public@sentry.example.com/1
REACT_APP_GA_TRACKING_ID=UA-XXXXX-Y

# ===== FEATURE TOGGLES =====
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_DEBUG_TOOLS=false